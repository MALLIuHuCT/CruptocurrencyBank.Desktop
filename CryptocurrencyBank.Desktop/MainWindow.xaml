<Window x:Class="CryptocurrencyBank.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:CryptocurrencyBank.Desktop"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptocurrencyBank.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Balances" FontSize="20" Background="CornflowerBlue" HorizontalAlignment="Left" Margin="400,265,0,0" VerticalAlignment="Top" Height="70" Width="205" Click="Button_Click"/>
        <Button Content="MoneyTransfers" FontSize="20" Background="red" HorizontalAlignment="Left" Margin="195,265,0,0" VerticalAlignment="Top" Height="70" Width="205" Click="Button_Click_1"/>
        <TextBox HorizontalAlignment="Left" FontSize="20" Text="{Binding Port, Mode=TwoWay}" MaxLength="4" x:Name="PortUI" Margin="401,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28"/>
        <Label Content="Enter the port:" FontSize="20" HorizontalAlignment="Left" Margin="259,166,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
